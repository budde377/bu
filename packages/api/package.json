{
  "description": "Thang.io",
  "main": "src/index.js",
  "scripts": {
    "postinstall": "scripts/postinstall.js",
    "build:docker": "docker build --build-arg VERSION=$VERSION -t budde377/thang-api:${VERSION:-latest} .",
    "publish:docker": "docker push budde377/thang-api:${VERSION:-latest}",
    "start": "node dist",
    "build": "babel src -d dist --copy-files --ignore **/__tests__/",
    "test:flow": "flow .",
    "test:lint": "eslint .",
    "test:jest": "jest --forceExit",
    "test:helm": "helm lint ./helm/*",
    "test": "npm run test:helm && npm run test:lint && npm run test:flow && npm run test:jest",
    "dev": "nodemon --exec babel-node src",
    "deploy:helm": "helm upgrade -i --wait --timeout 300 --set image.tag=${VERSION:-latest} thang-api helm/api",
    "deploy": "npm run build:docker && npm run publish:docker && npm run deploy:helm"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/budde377/thang.git"
  },
  "keywords": [
    "thang"
  ],
  "author": "Christian Budde Christensen <budde377@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/budde377/thang/issues"
  },
  "homepage": "https://github.com/budde377/thang#readme",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "apollo-server-koa": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "config": "^1.30.0",
    "debug": "^3.1.0",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^2.23.1",
    "jdenticon": "^2.0.0",
    "js-yaml": "^3.11.0",
    "jsonwebtoken": "^8.2.0",
    "jwk-to-pem": "^2.0.0",
    "jwks-rsa": "^1.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lru-cache": "^4.1.2",
    "moment-timezone": "^0.5.14",
    "node-fetch": "^2.1.2",
    "rethinkdb": "^2.3.3",
    "subscriptions-transport-ws": "^0.9.7",
    "superagent": "^3.8.2",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "escope": "^3.6.0",
    "eslint": "^4.19.1",
    "eslint-config-standard-flow": "^1.0.1",
    "faker": "^4.1.0",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.4.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2"
  }
}
